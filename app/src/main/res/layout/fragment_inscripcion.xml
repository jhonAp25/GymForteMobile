<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.gymfortemobile.View.ui.home.IncripcionFragment">


    <ImageView
        android:id="@+id/imgtrainer"
        tools:srcCompat="@tools:sample/backgrounds/scenic"
        android:layout_width="411dp"
        android:layout_height="336dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgtrainer">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtiid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="176dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="177dp"
                android:gravity="center"
                android:text="NOMBRE"
                android:textColor="@color/NAVBAR"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.466"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txttrainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="176dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="177dp"
                android:gravity="center"
                android:text="NOMBRE"
                android:textColor="@color/NAVBAR"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.466"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="415dp"
                android:layout_height="200dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txttrainer">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="start|center_vertical"
                        android:text="FECHA :"
                        android:textColor="@color/NAVBAR"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="start|center_vertical"
                        android:text="Hora :"
                        android:textColor="@color/NAVBAR"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="start|center_vertical"
                        android:text="DISCIPLINA :"
                        android:textColor="@color/NAVBAR"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="97dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtfechaclas"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center|center_vertical"
                        android:paddingRight="15dp"
                        android:text="TextView"
                        android:textColor="@color/azul"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txthora"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center|center_vertical"
                        android:text="TextView"
                        android:textColor="@color/azul"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtdisciplina"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center|center_vertical"
                        android:paddingRight="15dp"
                        android:text="TextView"
                        android:textColor="@color/azul"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"

                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="18dp"
                        android:text="EDAD :"
                        android:textColor="@color/NAVBAR"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="18dp"
                        android:text="GENERO:"
                        android:textColor="@color/NAVBAR"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="89dp"
                    android:layout_height="162dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtedad"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:paddingRight="10dp"
                        android:text="TextView"
                        android:textColor="@color/azul"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtgenero"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:paddingRight="10dp"
                        android:text="TextView"
                        android:textColor="@color/azul"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btninscribir"
                android:layout_width="346dp"
                android:layout_height="48dp"
                android:layout_marginBottom="1dp"
                android:backgroundTint="#EC1479"
                android:text="Asistir"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>